!!!
html
    head
        title Trackers - Big Brother
        link(href="/css/style.css", rel="stylesheet")
        link(href="/css/bootstrap.min.css", rel="stylesheet")
        //link(href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.1.1/css/bootstrap-combined.min.css", rel="stylesheet")
        
    body
        .container-fluid
            header
                h1 BigBrother
                #right
                    ul#main-menu.nav.nav-pills
                        li
                            a(href="/") Map
                        li.active
                            a(href="/trackers") Trackers
                .clear
                
                form
                    table.table
                        tr
                            th Device ID
                            th Pin
                        each tracker in [1]
                            tr
                                td "TRACKER ID"
                                td
                                    select
                                        each pin in ["RedPin", "Car", "BluePin"]
                                            option(value="#{tracker}_PIN") #{pin}
                                
                            
                    
        
        script(src="http://code.jquery.com/jquery-1.8.2.min.js")
        //script(src="/netdna.bootstrapcdn.com/twitter-bootstrap/2.1.1/js/bootstrap.min.js")
        script(src="/js/socket.io.min.js")
